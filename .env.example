# Environment Configuration Template
# Copy this file to .env and update with your actual credentials
# DO NOT commit the actual .env file to version control

# Flutterwave Payment Gateway Credentials
FLW_PUBLIC_KEY=FLWPUBK-your-public-key-here
FLW_SECRET_KEY=FLWSECK-your-secret-key-here
FLW_ENCRYPTION_KEY=your-encryption-key-here
FLW_ENV=sandbox
FLW_WEBHOOK_SECRET=your-webhook-secret-here

# Database Configuration
DB_HOST=localhost
DB_NAME=your_database_name
DB_USER=your_db_username
DB_PASS=your_db_password

# Email Configuration
EMAIL_HOST=your.smtp.server.com
EMAIL_USERNAME=your-email@yourdomain.com
EMAIL_PASSWORD=your-email-password